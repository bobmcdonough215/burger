<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="navbar-brand">Eat-Da-Burger</a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" id="burgerName" name="burger_name" placeholder="Add a burger" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="add">Add a burger</button>
  </form>
</nav>

<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Eat-Da-Burger</h1>
      <p class="lead">Click on a burger to devour it or add a new burger in the form above!</p>
    </div>
  </div>



  <div class="container">
    <div class="row" id="top">
      <div class="col-1"></div>
      <div class="col-10">
        <div class="row">
          {{#each burgers}}
          {{#unless this.devoured}}
          <div class="col-sm-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">{{this.burger_name}}</h5>
                <form class="eatburger button-size">
                  <input type="hidden" class="change-devour" type="text" value={{this.id}}><br>
                  <button type="submit" type="button" class="btn btn-outline-success">Devour</button>
                </form>
              </div>
            </div>
          </div>
          {{/unless}}
          {{/each}}
        </div>
      </div>


      <div class="col-1"></div>
    </div>
    <div class="col-1"></div>
    <div class="col-10">
      <div class="row">
        {{#each burgers}}
        {{#if devoured}}
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{this.burger_name}}</h5>
              <form class="eatburger button-size">
                <input type="hidden" class="change-devour" type="text" value={{this.id}}><br>
                <button type="submit" type="button" class="btn btn-outline-success">Devour</button>
              </form>
            </div>
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>


    <div class="col-1"></div>
  </div>